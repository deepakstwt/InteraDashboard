# Environment variables for Vehicle Registration Dashboard

# API Configuration
VAHAN_BASE_URL=https://vahan.parivahan.gov.in/vahan4dashboard/
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=2.0

# Database Configuration (if using)
DATABASE_URL=sqlite:///data/vehicle_registration.db

# Dashboard Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Logging Configuration
LOG_LEVEL=INFO
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHING=true

# Data Processing
BATCH_SIZE=1000
MAX_WORKERS=4

# Export Configuration
MAX_EXPORT_SIZE=50MB
EXPORT_COMPRESSION=true
